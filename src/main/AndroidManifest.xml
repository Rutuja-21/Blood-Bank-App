<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.project.bloodbank">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ico_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.project.bloodbank.Intro"
            android:theme="@style/IntroTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.project.bloodbank.Login">
            <intent-filter>
                <action android:name="com.example.project.bloodbank" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.project.bloodbank.Register" />
        <activity android:name="com.example.project.bloodbank.SearchDonor" />
        <activity android:name="com.example.project.bloodbank.Searchview" />
        <activity android:name="com.example.project.bloodbank.Profile" />
        <activity android:name="com.example.project.bloodbank.ResetPass" />
        <activity android:name="com.example.project.bloodbank.ChangePass" />
        <activity android:name="com.example.project.bloodbank.AdminPanel" />
        <activity android:name="com.example.project.bloodbank.AdminSearchDonor" />
        <activity android:name="com.example.project.bloodbank.AdminSearchview" />
        <activity android:name="com.example.project.bloodbank.AdminAddUser" />

    </application>


</manifest>

